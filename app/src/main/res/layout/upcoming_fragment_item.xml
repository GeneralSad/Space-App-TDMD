<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/upcomingItemLayout">

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/upcomingItemImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/rocket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/upcomingItemTextBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/upcomingItemImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/upcomingItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name placeholder"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/upcomingItemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time placeholder"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/upcomingItemRocket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rocket placeholder"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="15sp"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>